@model List<WebAdminPortal.Models._90InformesParametro>

<h1>Informes</h1>
<p>
    <a class="btn btn-success" asp-action="Create">
        Crear Informe
    </a>
</p>
<table id="Informe" class="order-column">
    <thead>
        <tr>

            <th>Nombre Informe</th>
            <th>Tipo Informe</th>
            <th>Observacion</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var infor in Model )
        {
            <tr>

                <td> @Html.DisplayFor(m => infor.NombreInforme) </td>
                <td> @Html.DisplayFor(m => infor.TipoInforme) </td>
                <td> @Html.DisplayFor(m => infor.Observaciones) </td>

            </tr>
        }
    </tbody>

</table>
@section scripts
    {
    <script>

        $(document).ready(function () {
            $('#Informe').DataTable({
               
                dom: 'fQrtBip',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json',
                },
                buttons: [
                    {
                        extend: 'excel',
                        text: 'Exportar información',
                        exportOptions: {


                        }
                    }
                ],

                select: {
                    style: 'single'
                }

            });
        });


    </script>

}